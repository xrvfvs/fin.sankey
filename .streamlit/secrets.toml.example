# Streamlit Secrets Configuration
# For Streamlit Cloud: Copy content to Settings > Secrets in your app dashboard
# For local development: Copy this file to secrets.toml (without .example)

# Perplexity API Key (required for AI Reports)
# Get your key at: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY = "pplx-your-api-key-here"

# Supabase Configuration (required for user accounts)
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
[supabase]
url = "https://your-project.supabase.co"
anon_key = "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
