# Streamlit Secrets Configuration
# For Streamlit Cloud: Copy content to Settings > Secrets in your app dashboard
# For local development: Copy this file to secrets.toml (without .example)

# =============================================================================
# PERPLEXITY API (required for AI Reports)
# =============================================================================
# Get your key at: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY = "pplx-your-api-key-here"

# =============================================================================
# SUPABASE (required for user accounts)
# =============================================================================
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
[supabase]
url = "https://your-project.supabase.co"
anon_key = "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."

# =============================================================================
# EMAIL NOTIFICATIONS (choose one provider)
# =============================================================================
# Configure ONE of the following sections based on your preferred email provider

# --- Option 1: SendGrid (Recommended for production) ---
# Get your API key at: https://app.sendgrid.com/settings/api_keys
[email]
sendgrid_api_key = "SG.your-sendgrid-api-key"
from_email = "alerts@your-domain.com"
from_name = "fin.sankey Alerts"

# --- Option 2: Resend ---
# Uncomment and use instead of SendGrid if preferred
# [email]
# resend_api_key = "re_your-resend-api-key"
# from_email = "alerts@your-domain.com"

# --- Option 3: SMTP (Gmail, Outlook, etc.) ---
# Uncomment and use instead of SendGrid if preferred
# [email]
# smtp_server = "smtp.gmail.com"
# smtp_port = 587
# smtp_user = "your-email@gmail.com"
# smtp_password = "your-app-password"
# from_email = "your-email@gmail.com"

# =============================================================================
# REDIS (optional - for session persistence)
# =============================================================================
# Only needed for production deployments with multiple instances
[redis]
url = "redis://localhost:6379/0"
